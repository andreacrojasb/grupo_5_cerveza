<!DOCTYPE html>
<html>
    <%- include('../partials/head'); %>
<body>
    <%- include('../partials/header'); %>
    <main class="create">
        <div class="container">
            <h2 class="title">CREAR UN PRODUCTO</h1>
            <div class="separador"></div>
            <div class="formCreate">
                <form action="" method="post" enctype="multipart/form-data">
                    <div class="name">
                        <label for="pname">Nombre</label>
                        <input id="pname" name="pname" type="text">
                    </div>
                    <div class="category">
                        <label for="pcategory">Categoría</label>
                        <select id="pcategory" name="pcategory">
                            <option value="ipa">IPA</option>
                            <option value="lager">Lager</option>
                            <option value="ale">Ale</option>
                            <option value="negra">Negra</option>
                            <option value="honey">Honey</option>
                          </select>
                    </div>
                    <div class="abv">
                        <label for="pabv">ABV</label>
                        <input id="pabv" name="pabv" type="number">
                    </div>
                    <div class="ibu">
                        <label for="pibu">IBU</label>
                        <input id="pibu" name="pibu" type="number">
                    </div>
                    <div class="desc">
                        <label for="pdesc">Descripción</label>
                        <textarea name="pdesc" id="pdesc" rows="10" cols="20"></textarea>
                    </div>
                    <div class="price">
                        <label for="pprice">Precio</label>
                        <input id="pprice" name="pprice" type="number">
                    </div>
                    <div class="image">
                        <label for="pimage">Imagen</label>
                        <input id="pimage" name="pimage" type="file">
                    </div>
                    <button type="submit">Crear</button>
                </form>
            </div>
        </div>
    </main>
    <%- include('../partials/footer'); %>
</body>
</html>